<source>
  type tail
  format apache2
  path /var/log/httpd/access_log
  tag apache.access
  pos_file /var/log/td-agent/httpd-access_log.pos
</source>

<match apache.access>
  type file
  path /var/log/td-agent/access_log
</match>

<source>
  type tail
  format apache2
  path /var/log/httpd/error_log
  tag apache.error
  pos_file /var/log/td-agent/httpd-error_log.pos
</source>

<match apache.error>
  type file
  path /var/log/td-agent/error_log
</match>